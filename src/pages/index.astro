---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro'; // Componente de encabezado simple para la jerarquía inicial
import TimelineItem from '../components/TimelineItem.jsx';
import { timelineData } from '../data/timelineData';

// Pasa las props para el componente React
const timelineItems = timelineData.map((item, index) => ({
  ...item,
  isLeftAligned: index % 2 === 0, // Alterna la alineación para un diseño de línea de tiempo clásico
}));
---

<BaseLayout title="Línea del Tiempo de la Administración">
  <Header /> {/* Incluye el encabezado con la jerarquía principal */}
  <main class="container mx-auto px-4 py-12 md:px-8 max-w-6xl">
    <section class="timeline relative">
      {timelineItems.map((item) => (
        <TimelineItem client:load {...item} />
      ))}
    </section>
  </main>
</BaseLayout>