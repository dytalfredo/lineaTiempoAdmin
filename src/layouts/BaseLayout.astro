---
import '../styles/global.css'; // Asegúrate de tener este archivo para estilos globales
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@400;700&family=Old+Standard+TT:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
</head>
<body class="bg-parchment text-ink font-serif-custom min-h-screen flex flex-col">
  <slot />
  <footer class="mt-auto py-8 text-center text-sepia-dark text-sm bg-sepia-light bg-opacity-10">
    <p>Desarrollado por Alfredo Mendoza para IUJO</p>
  </footer>
</body>
</html>

<style is:global>
  body {
    font-family: 'Old Standard TT', serif; /* Aplicamos la fuente base */
  }
  h1, h2 {
    font-family: 'Cinzel Decorative', cursive; /* Para títulos con jerarquía exagerada */
  }
</style>